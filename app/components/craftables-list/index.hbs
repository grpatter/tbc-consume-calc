
<div class="d-flex justify-content-between align-items-center">
  <h2 class="h6 mb-0 py-1">Consumables (Click Button to show/hide) --></h2>
  <button type="button" class="btn btn-light btn-sm list-title-btn w-10" {{on "click" this.toggleMode}}>
    <Icon @name={{if this.isInputMode "config" "calculator"}} />
  </button>
</div>

<div class="card text-white bg-dark mb-3" style="width: 25rem;">
  <div class="card-body">
    <h5 class="card-title">TBC Consumes</h5>
              <ul class="list-group mt-2">
    {{#each this.rows key="item.id" as |row index|}}
    <CraftablesList::Row
      @index={{index}}
      @item={{row.item}}
      @amount={{row.amount}}
      @hidden={{row.hidden}}
      @input={{this.isInputMode}}
      @onInputAmount={{fn this.setAmount row}}
      @onChangeVisibility={{fn this.setVisibility row}}
    />
    {{/each}}
  </ul>
  </div>
</div>

